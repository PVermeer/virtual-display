  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Daemon",
      "env": {
        // "RUST_BACKTRACE": "1",
        "VD_LOG": "debug",
        "GSETTINGS_BACKEND": "memory"
      },
      "cargo": {
        "args": [
          "build",
          "--bin=virtual-display-daemon"
        ],
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
        {
      "type": "lldb",
      "request": "launch",
      "name": "Debug CLI",
      "env": {
        // "RUST_BACKTRACE": "1",
        "VD_LOG": "debug",
        "GSETTINGS_BACKEND": "memory"
      },
      "cargo": {
        "args": [
          "build",
          "--bin=virtual-display"
        ],
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests",
      "env": {
        "VD_LOG": "debug",
        "GSETTINGS_BACKEND": "memory"
      },
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bins"
        ],
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}