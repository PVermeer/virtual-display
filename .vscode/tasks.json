{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"args": [],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "Build debug"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "Build release"
		},
		{
			"label": "Build rpm",
			"type": "shell",
			"command": "./rpm-tools/rpm-tool",
			"args": [
				"build",
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Release",
			"type": "shell",
			"command": "./rpm-tools/rpm-tool",
			"args": [
				"release",
				"copr-build",
				"--copr-watch"
			],
			"problemMatcher": [],
			"group": {
				"kind": "none",
				"isDefault": false
			}
		},
		{
			"type": "shell",
			"command": "sudo pkill -f virtual-display-daemon",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "none",
				"isDefault": false
			},
			"label": "Stop daemon"
		},
	]
}